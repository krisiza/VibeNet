            <a class="nav-link text-dark" asp-area="" asp-route-userId="@User.Id()" asp-controller="Friendrequest" asp-action="ShowFriendrequests">Friendsrequest</a>
            <a class="nav-link text-dark" asp-area="" asp-route-userId="@User.Id()" asp-controller="Friendship" asp-action="ShowFriends">Friends</a>
